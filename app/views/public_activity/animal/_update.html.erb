<li class="media">
  <% if activity.trackable && activity.trackable.picture? %>
    <a class="pull-left" href="#">
      <%= image_tag(activity.trackable.picture_url(:tinythumbnail), :alt => activity.trackable.name, :class => 'media-object') %>
    </a>
  <% end %>
  <div class="media-body">
    <span><%= time_ago_in_words(activity.created_at) %> ago</span>
    <h5 class="media-heading">
      <% if activity.trackable %>
        <%= link_to activity.trackable.name, admin_animal_path(activity.trackable) %> was updated by <%= link_to activity.owner.email, admin_user_path(activity.owner) if activity.owner %>
      <% else %>
        which has since been removed
      <% end %>
    </h5>
  </div>
</li>