<div class="col-lg-12 col-md-12">
  <div class="page-header">
    <h3>Edit Residence Location</h3>
  </div> 
  <%= form_for [:admin, @location], :html => { :class => 'form-horizontal' } do |f| %>
    <%= render :partial => '/admin/addresses/fields', object: @location.address, :locals => {:f => f} %>
    <%= hidden_field :location,:as_location_type, :value => "residence_location" %>
    <div class="form-actions">
      <%= f.submit nil, :class => 'btn btn-primary' %>
      <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                admin_locations_path, :class => 'btn' %>
    </div>
  <% end %>
</div>
