<div class="col-lg-12 col-md-12">
  <div class="box box-primary">
    <div class="box-header">
      <h3 class="box-title">Edit On Premises Location</h3>
    </div> 
    <%= form_for [:admin, @location], :html => { :role => 'form' }  do |f| %>
      <div class="box-body">
      	<% @onpremiseslocation = @location %>
        <%= render :partial => '/admin/locations/fieldsonpremiseslocation', :locals => {:f => f}   %>
        <%= hidden_field :location,:as_location_type, :value => "on_premises_location" %>
      </div>

      <div class="box-footer">
        <%= f.submit nil, :class => 'btn btn-primary' %>
        <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                admin_locations_path, :class => 'btn' %>
        </div>
      </div>
      
    <% end %>
</div>
