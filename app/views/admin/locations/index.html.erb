<%- model_class = Location -%>

<div class="col-lg-12 col-md-12">
  <div class="page-header">
    All Locations
  </div>  

<table class="table table-striped">
  <thead>
    <tr>
      <th>ID</th>
      <th>Name</th>
      <th>Description</th>
      <th colspan="2"></th>
    </tr>
  </thead>

  <tbody>
    <% @locations.each do |location| %>
      <tr>
        <td><%= location.id %></td>
        <td><%= link_to location.name, "/admin/#{location.as_location_type.underscore.pluralize}/#{location.as_location_id.to_s}" %></td>
        <td><%= location.description %></td>
        <td>
          <%= link_to t('.edit', :default => t("helpers.links.edit")),
                      '/admin/'+ location.as_location_type.underscore.pluralize + '/' + location.as_location_id.to_s + '/edit', :class => 'btn btn-mini' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to t('.new', :default => t("helpers.links.new")),
            new_admin_location_path,
            :class => 'btn btn-primary' %>

</div>
