<%= form_for [:admin, @animal], :html => { :class => 'form-horizontal' } do |f| %>
  <div class="control-group">
    <%= f.label :picture, :class => 'control-label' %>
    <%= f.hidden_field(:picture_cache) %>
    <%= f.file_field(:picture) %>
  </div>
  <div class="control-group">
    <%= f.label :name, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :name, :class => 'text_field' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :code, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :code, :class => 'text_field' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :short_code, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :short_code, :class => 'text_field' %>
    </div>
  </div>
  <div class="control-group">
    <label>Location</label>
    <% if @animal.location then @location = @animal.location %> 
      Location: <%= @animal.location.as_location_type %> <%= @animal.location.id %>
    <% else @location = Location.new %>
      <%= render :partial => '/admin/locations/fields', object: @location %>
    <% end %>
  </div>
  <div class="control-group">
    <%= f.label :litter, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :litter, :class => 'text_field' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :animal_sex_id, 'Sex', :class => 'control-label' %>
    <div class="controls">
      <%= collection_select :animal, :animal_sex_id, AnimalSex.all, :id, :name %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :animal_type_id, 'Type', :class => 'control-label' %>
    <div class="controls">
      <%= collection_select :animal, :animal_type_id, AnimalType.all, :id, :name %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :animal_color_id, 'Color', :class => 'control-label' %>
    <div class="controls">
      <%= collection_select :animal, :animal_color_id, AnimalColor.all, :id, :name %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :animal_coat_type_id, 'Coat Type', :class => 'control-label' %>
    <div class="controls">
      <%= collection_select :animal, :animal_coat_type_id, AnimalCoatType.all, :id, :name %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :animal_size_id, 'Size', :class => 'control-label' %>
    <div class="controls">
      <%= collection_select :animal, :animal_size_id, AnimalSize.all, :id, :name %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :animal_species_id, 'Species', :class => 'control-label' %>
    <div class="controls">
      <%= collection_select :animal, :animal_species_id, AnimalSpecies.all, :id, :name %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :animal_breed_id, 'Breed', :class => 'control-label' %>
    <div class="controls">
      <%= collection_select :animal, :animal_breed_id, AnimalBreed.all, :id, :name %>
    </div>
  </div>

  <div class="form-actions">
    <%= f.submit nil, :class => 'btn btn-primary' %>
    <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                admin_animals_path, :class => 'btn' %>
  </div>
<% end %>
