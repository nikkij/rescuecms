<%- model_class = Animal -%>
<div class="col-lg-12 col-md-12" style="padding-top:10px;padding-bottom:10px;">
  <div class="row">
    <div class="col-md-3">
      <h3 style="display:inline"><%= @animal.name %></h3>
    </div>
    <div class="col-md-9">
      <div class="form-actions pull-right">
      <%= link_to t('.edit', :default => t("helpers.links.edit")),
                edit_admin_animal_path(@animal), :class => 'btn' %>
      <%= link_to 'Move', move_admin_animal_path(@animal), method: :get, :class => 'btn btn-mini' %>
      <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
                admin_animal_path(@animal),
                :method => 'delete',
                :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
                :class => 'btn btn-danger' %>
      </div>
    </div>
  </div>
</div>
<div class="col-lg-3 col-md-3">
  <div class="row">
    <%= image_tag(@animal.picture_url(:standard), :alt => @animal.name) %>
  </div>
  <div class="row">
    <br/>
    <h5>General Information</h5>
    <table class="table table-condensed">
      <tr>
        <td><strong><%= model_class.human_attribute_name(:status) %></strong></td>
        <td><%= @animal.status %></td>
      </tr>
      <tr>
        <td><strong><%= model_class.human_attribute_name(:code) %></strong></td>
        <td><%= @animal.code %>-<%= @animal.short_code %></td>
      </tr>
      <tr>
        <td><strong><%= model_class.human_attribute_name(:type) %></strong></td>
        <td><%= @animal.type if @animal.type %></td>
      </tr>
      <tr>
        <td><strong><%= model_class.human_attribute_name(:sex) %></strong></td>
        <td><%= @animal.sex if @animal.sex %></td>
      </tr>
      <tr>
        <td><strong><%= model_class.human_attribute_name(:color) %></strong></td>
        <td><%= @animal.color if @animal.color %></td>
      </tr>
      <tr>
        <td><strong><%= model_class.human_attribute_name(:coat_type) %></strong></td>
        <td><%= @animal.coat_type if @animal.coat_type %></td>
      </tr>
      <tr>
        <td><strong><%= model_class.human_attribute_name(:size) %></strong></td>
        <td><%= @animal.size if @animal.size %></td>
      </tr>
      <tr>
        <td><strong><%= model_class.human_attribute_name(:species) %></strong></td>
        <td><%= @animal.species if @animal.species %></td>
      </tr>
      <tr>
        <td><strong><%= model_class.human_attribute_name(:breed) %></strong></td>
        <td><%= @animal.breed if @animal.breed %></td>
      </tr>
      <tr>
        <td><strong><%= model_class.human_attribute_name(:litter) %></strong></td>
        <td><%= @animal.litter %></td>
      </tr>
    </table>
    </dl>
  </div>
</div>

<div class="col-lg-9 col-md-9">
    <div class="box box-primary">
      <div class="box-header">
        <h3 class="box-title">Location</h3>
      </div>
      <div class="box-body">
        <%= @animal.location.name %><br />
        <%= @animal.location.description %>
      </div>
    </div>

    <div class="box box-primary">
      <div class="box-header">
        <h3 class="box-title">Public Profile</h3>
      </div>
      <div class="box-body">
        <strong>Story</strong><br/>
        <% if @animal.story.blank? %>
          This animal doesn't have a story yet. <%= link_to 'Give them one', edit_admin_animal_path(@animal) %> and increase their chances for adoption.
        <% else %>
          <%= @animal.story %>
        <% end %>
      </div>
    </div>    


</div>
