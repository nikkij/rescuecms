<%- model_class = Animal -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.titleize %></h1>
</div>

<dl class="dl-horizontal">
  <dt><strong><%= model_class.human_attribute_name(:name) %>:</strong></dt>
  <dd><%= @animal.name %></dd>
  <dt><strong><%= model_class.human_attribute_name(:code) %>:</strong></dt>
  <dd><%= @animal.code %></dd>
  <dt><strong><%= model_class.human_attribute_name(:short_code) %>:</strong></dt>
  <dd><%= @animal.short_code %></dd>
  <dt><strong><%= model_class.human_attribute_name(:litter) %>:</strong></dt>
  <dd><%= @animal.litter %></dd>
  <dt><strong><%= model_class.human_attribute_name(:animal_sex_id) %>:</strong></dt>
  <dd><%= @animal.animal_sex_id %></dd>
  <dt><strong><%= model_class.human_attribute_name(:animal_type_id) %>:</strong></dt>
  <dd><%= @animal.animal_type_id %></dd>
  <dt><strong><%= model_class.human_attribute_name(:animal_color_id) %>:</strong></dt>
  <dd><%= @animal.animal_color_id %></dd>
  <dt><strong><%= model_class.human_attribute_name(:animal_coat_type_id) %>:</strong></dt>
  <dd><%= @animal.animal_coat_type_id %></dd>
  <dt><strong><%= model_class.human_attribute_name(:animal_size_id) %>:</strong></dt>
  <dd><%= @animal.animal_size_id %></dd>
  <dt><strong><%= model_class.human_attribute_name(:animal_species_id) %>:</strong></dt>
  <dd><%= @animal.animal_species_id %></dd>
  <dt><strong><%= model_class.human_attribute_name(:animal_breed_id) %>:</strong></dt>
  <dd><%= @animal.animal_breed_id %></dd>
</dl>

<div class="form-actions">
  <%= link_to t('.back', :default => t("helpers.links.back")),
              admin_animals_path, :class => 'btn'  %>
  <%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_admin_animal_path(@animal), :class => 'btn' %>
  <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              admin_animal_path(@animal),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-danger' %>
</div>