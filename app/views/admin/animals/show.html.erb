<%- model_class = Animal -%>

<div class="col-lg-12 col-md-12">
  <div class="page-header">
    <h3><%= @animal.name %></h3>
  </div>  

  <dl class="dl-horizontal">
    <dt>Picture</dt>
    <dd><%= image_tag(@animal.picture_url(:standard), :alt => @animal.name) %></strong></dd>
    <dt><strong><%= model_class.human_attribute_name(:name) %>:</strong></dt>
    <dd><%= @animal.name %></dd>
    <dt><strong><%= model_class.human_attribute_name(:code) %>:</strong></dt>
    <dd><%= @animal.code %></dd>
    <dt><strong><%= model_class.human_attribute_name(:short_code) %>:</strong></dt>
    <dd><%= @animal.short_code %></dd>
    <dt><strong><%= model_class.human_attribute_name(:litter) %>:</strong></dt>
    <dd><%= @animal.litter %></dd>
    <dt><strong><%= model_class.human_attribute_name(:location) %>:</strong></dt>
    <dd><%= @animal.location.name %>,<%= @animal.location.description %></dd>
    <dt><strong><%= model_class.human_attribute_name(:sex) %>:</strong></dt>
    <dd><%= @animal.sex if @animal.sex %></dd>
    <dt><strong><%= model_class.human_attribute_name(:type) %>:</strong></dt>
    <dd><%= @animal.type if @animal.type %></dd>
    <dt><strong><%= model_class.human_attribute_name(:color) %>:</strong></dt>
    <dd><%= @animal.color if @animal.color %></dd>
    <dt><strong><%= model_class.human_attribute_name(:coat_type) %>:</strong></dt>
    <dd><%= @animal.coat_type if @animal.coat_type %></dd>
    <dt><strong><%= model_class.human_attribute_name(:size) %>:</strong></dt>
    <dd><%= @animal.size if @animal.size %></dd>
    <dt><strong><%= model_class.human_attribute_name(:species) %>:</strong></dt>
    <dd><%= @animal.species if @animal.species %></dd>
    <dt><strong><%= model_class.human_attribute_name(:breed) %>:</strong></dt>
    <dd><%= @animal.breed if @animal.breed %></dd>
  </dl>  

  <div class="form-actions">
    <%= link_to t('.back', :default => t("helpers.links.back")),
                admin_animals_path, :class => 'btn'  %>
    <%= link_to t('.edit', :default => t("helpers.links.edit")),
                edit_admin_animal_path(@animal), :class => 'btn' %>
    <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
                admin_animal_path(@animal),
                :method => 'delete',
                :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
                :class => 'btn btn-danger' %>
  </div>

</div>
