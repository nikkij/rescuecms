<h1>Listing addresses</h1>

<table>
  <thead>
    <tr>
      <th>Street</th>
      <th>Addressable</th>
      <th>Addressable type</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @addresses.each do |address| %>
      <tr>
        <td><%= address.street %></td>
        <td><%= address.addressable_id %></td>
        <td><%= address.addressable_type %></td>
        <td><%= link_to 'Show', admin_animal_path(address) %></td>
        <td><%= link_to 'Edit', edit_admin_address_path(address) %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Address', new_admin_address_path %>
