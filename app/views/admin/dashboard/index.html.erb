        <!-- Main content -->
        <section class="content">
        
            <!-- Small boxes (Stat box) -->
            <div class="row">
            	<% @animals.take(4).each do |animal| %>
            	<div class="col-lg-3 col-md-3 col-xs-6">
                    <!-- small box -->
                    <div class="small-box bg-gray">
                        <div class="inner">
                            <p>
                                <% if animal.picture? %>
                                <a href="<%= admin_animal_path(animal) %>">
                                	<%= image_tag(animal.picture_url(:card), :alt => animal.name, :class=>'img-responsive') %>
                                </a>
                               <% else %>
                                 <a href="<%= animal_path(animal) %>">
                                   <img src="http://placehold.it/210x210&text=<%= animal.name %>" class="img-responsive img-thumbnail">
                                 </a>
                               <% end %>
                            </p>
                        </div>                       
                          <a href="<%= admin_animal_path(animal) %>" class="small-box-footer">
                            <%= animal.name %>
                          </a>
                    </div>
                </div><!-- ./col -->            	    
            	<% end %>

            </div><!-- /.row -->

            <!-- top row -->
            <div class="row">
                <div class="col-xs-12 connectedSortable">
                    
                </div><!-- /.col -->
            </div>
            <!-- /.row -->

            <!-- Main row -->
            <div class="row">
                <!-- Left col -->
                <!-- CHANGE BACK TO 6 WHEN SECOND COL IS IMPLEMENTED -->
                <section class="col-lg-6 col-md-6 connectedSortable">
                    <!-- Adoptables list box -->
                    <div class="box box-warning">
                        <div class="box-header">
                            <!-- tools box -->
                            <!--<div class="pull-right box-tools">
                            	<div class="btn-group">
                                    <button class="btn btn-warning btn-sm dropdown-toggle" data-toggle="dropdown"><i class="fa fa-bars"></i></button>
                                    <ul class="dropdown-menu pull-right" role="menu">
                                        <li><a href="#">Fosters</a></li>
                                        <li><a href="#">On Hold</a></li>
                                        <li class="divider"></li>
                                        <li><a href="#">Custom Filter</a></li>
                                    </ul>
                                </div>
                            </div>--><!-- /. tools -->
                            <i class="fa fa-map-marker"></i>
                            <h3 class="box-title">
                                Adoptables
                            </h3>
                        </div>
                        <div class="box-body no-padding">
                            <div class="table-responsive">
                                <!-- .table - Uses sparkline charts-->
                                <table class="table table-striped">
                                    <tr>
                                        <th>Name</th>
                                        <th>Location</th>
                                        <th>Status</th>
                                        <th colspan="2">Actions</th>
                                        <!--<th>Alerts</th>-->
                                    </tr>
                                    <% @animals.take(5).each do |animal| %>
                                    <tr>
                                        <td>
                                          <a href="<%= admin_animal_path(animal) %>">
                                            <%= animal.name %>
                                          </a>
                                        </td>
                                        <td><%= animal.location.name if animal.location %></td>
                                        <td><%= animal.status if animal.status %></td>
                                        <td><a href="<%= edit_admin_animal_path(animal) %>"><i class="fa fa-pencil"></i></td>
                                        <td><a href="<%= move_admin_animal_path(animal) %>"><i class="fa fa-exchange"></i></a></td>
                                        <!--<td>Alert</td>-->
                                    </tr>
                                    <% end %>
                                </table><!-- /.table -->
                            </div>
                        </div><!-- /.box-body-->
                        <div class="box-footer clearfix no-border">
                          <a href="<%= new_admin_animal_path %>" class="btn btn-default pull-right"><i class="fa fa-plus"></i> Add Animal</a>
                        </div>
                    </div>
                    <!-- /.box -->
                </section><!-- /.Left col -->
                <!-- right col (We are only adding the ID to make the widgets sortable)-->
                <section class="col-lg-6 col-md-6 connectedSortable">
                    <!-- Activity Stream list box -->
                    <div class="box box-warning">
                        <div class="box-header">
                            <i class="fa fa-bullhorn"></i>
                            <h3 class="box-title">
                                Activity Stream
                            </h3>
                        </div>
                        <div class="box-body">
                          <ul class="media-list">                  
                            <% @activities.each do |activity| %>
                              <div class="activity">
                                <%= render_activity activity %>
                              </div>
                            <% end %>
                          </ul>
                        </div><!-- /.box-body-->
                        <div class="box-footer">
  
                        </div>
                    </div>
                    <!-- /.box -->
                </section><!-- right col -->
            </div><!-- /.row (main row) -->

        </section><!-- /.content -->